<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">
            <i class="fas fa-search"></i> Rechercher un produit </br>par numéro de lot
            </h1>
            <form action="/products/searchLot" method="POST">
                <div class="form-group">
                    <input
                    type="number"
                    id="lot"
                    name="lot"
                    class="form-control"
                    placeholder="Numero de lot composé de 5 chiffres"
                    />
                </div>
                <button type="submit" class="btn btn-secondary btn-block">
                    Rechercher
                </button>
            </form>
            <% if(typeof slot != 'undefined' ){ %>
                <div class="col-md-9 mt-5">
                    <table align="center" border="1" style="text-align: center; width: 100%">
                      <thead class="btn-secondary">
                        <tr><th colspan="3">Produit(s) correspondant(s) à votre demande</th></tr>
                      </thead>
                      <tbody>
                        <tr>
                          <th>Nom</th>
                          <th>Lot n°</th>
                          <th>Disponibilité</th>
                        </tr>
                        <% products.forEach(function(pro) { %>
                        <tr>
                          <td><%= pro.name %></td>
            
                          <td><%= pro.numLot %></td>
            
                          <td><% if (pro.dispo == 0) { %><span style="color: red">RUPTURE</span><% } else { %><span style="color:green"><%= pro.dispo %></span><% } %></td>
                        </tr>
                        <% }); %>
                      </tbody>
                    </table>
                  </div>
                <% } %>
        </div>
    </div>
    <div class="col-md-6 m-auto">
            <div class="card card-body">
                <h1 class="text-center mb-3">
                <i class="fas fa-search"></i> Rechercher un produit </br> par prix
                </h1>
                <form action="/products/searchPrice" method="POST">
                    <div class="form-group">
                        <label for="minPrice">Prix Minimum</label>
                        <input
                        type="number"
                        id="minPrice"
                        name="minPrice"
                        class="form-control"
                        placeholder="Prix Minimum"
                        />
                    </div>
                    <div class="form-group">
                        <label for="maxPrice">Prix Maximum</label>
                        <input
                        type="number"
                        id="maxPrice"
                        name="maxPrice"
                        class="form-control"
                        placeholder="Prix Maximum"
                        />
                    </div>
                    <button type="submit" class="btn btn-secondary btn-block">
                        Rechercher
                    </button>
                </form>
                
                </div>
            </div>
            <% if(typeof sprix != 'undefined' ){ %>
              <div class="col-md-9 mt-5">
                  <table class="table table-dark">
                    <thead class="btn-secondary">
                      <tr><th colspan="7">Produit(s) correspondant(s) à votre demande</th></tr>
                    </thead>
                    <tbody>
                      <tr>
                        <th>Nom</th>
                        <th>Identifiant</th>
                        <th>Lot n°</th>
                        <th>Prix</th>
                        <th>Description</th>
                        <th>Date d'entrée en stock</th>
                        <th>Disponibilité</th>
                      </tr>
                      <% products.forEach(function(pro) { %>
                      <tr>
                        <td><%= pro.name %></td>
          
                        <td><%= pro.identifiant %></td>
          
                        <td><%= pro.numLot %></td>
          
                        <td><%= pro.price %> €</td>
          
                        <td><%= pro.resume %></td>
          
                        <td><% var date = new Date(pro.date) %><%= date.toLocaleString('fr-FR') %></td>
          
                        <td><% if (pro.dispo == 0) { %><span style="color: red">RUPTURE</span><% } else { %><span style="color:green"><%= pro.dispo %></span><% } %></td>
                      </tr>
                      <% }); %>
                    </tbody>
                  </table>
                </div>
              <% } %>
        </div>
        <% if(typeof errors != 'undefined' ){ %>
            <div class="col-md-9 mt-5">
            <% errors.forEach(function(error) { %>
              <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <%= error.msg %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
            <% }); %>
            </div>
         <% } %>
</div>

