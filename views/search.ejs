<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">
            <i class="fas fa-search"></i> Rechercher un produit </br>par numéro de lot
            </h1>
            <form action="/home/add" method="POST">
                <div class="form-group">
                    <input
                    type="number"
                    id="lot"
                    name="lot"
                    class="form-control"
                    placeholder="Numero de lot composé de 5 chiffres"
                    />
                </div>
                <button type="submit" class="btn btn-secondary btn-block">
                    Ajouter
                </button>
            </form>
        </div>
    </div>
    <div class="col-md-6 m-auto">
            <div class="card card-body">
                <h1 class="text-center mb-3">
                <i class="fas fa-search"></i> Rechercher un produit </br> par prix
                </h1>
                <form action="/home/add" method="POST">
                    <div class="form-group">
                        <label for="minPrice">Prix Minimum</label>
                        <input
                        type="number"
                        id="minPrice"
                        name="minPrice"
                        class="form-control"
                        placeholder="Prix Minimum"
                        />
                    </div>
                    <div class="form-group">
                        <label for="maxPrice">Prix Maximum</label>
                        <input
                        type="number"
                        id="maxPrice"
                        name="maxPrice"
                        class="form-control"
                        placeholder="Prix Maximum"
                        />
                    </div>
                    <button type="submit" class="btn btn-secondary btn-block">
                        Ajouter
                    </button>
                </form>
            </div>
        </div>
</div>

